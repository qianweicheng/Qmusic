<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppAttrs">
        <attr name="myCommonTitleStyle" format="reference" />
        <attr name="myBEditTextStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="BCommonTitle">
        <attr name="common_title" format="string" />
        <attr name="right_text" format="string" />
        <attr name="right_img" format="reference" />
        <attr name="left_img" format="reference" />
        <attr name="left_text" format="string" />
    </declare-styleable>
    <declare-styleable name="SectionTab">

        <!-- =================== -->
        <!-- Tab styles -->
        <!-- =================== -->
        <attr name="selectedTab">
            <enum name="tab0" value="0" />
            <enum name="tab1" value="1" />
            <enum name="tab2" value="2" />
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="RoundImage">
        <attr name="roundradius" format="dimension" />
        <attr name="blackwhite" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BEditText">
        <attr name="bTextMode">
            <enum name="text" value="0" />
            <enum name="edit" value="1" />
        </attr>
        <attr name="bText" format="reference"></attr>
        <attr name="bTextHint" format="reference|string"></attr>
        <attr name="bTextSize" format="reference|dimension"></attr>
        <attr name="bTextColor" format="reference|color"></attr>
        <attr name="bTextColorHint" format="reference|color"></attr>
        <attr name="bEditable" format="boolean"></attr>
    </declare-styleable>

</resources>