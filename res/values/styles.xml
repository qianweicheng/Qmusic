<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="base_edittext_style" parent="@android:style/Widget.EditText" />

    <style name="base_button_style" parent="@android:style/Widget.Button" />

    <style name="base_empty_dialog" parent="@android:style/Theme.Dialog" />

    <style name="base_list_style" parent="@android:style/Widget.ListView" />
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/b_button_style</item>
        <item name="android:button">@style/b_button_style</item>
    </style>

    <!-- common theme -->
    <style name="b_edittext_style" parent="base_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/b_edittext_bg</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:textColor">@color/txt_gray_input</item>
        <item name="android:textColorHint">@color/txt_hint_gray_input</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="b_button_style" parent="base_button_style">
        <item name="android:background">@drawable/b_button_round</item>
        <item name="android:layout_width">@dimen/button_w</item>
        <item name="android:layout_height">@dimen/button_h</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="b_icon_button" parent="base_button_style">
        <item name="android:layout_width">@dimen/button_h</item>
        <item name="android:layout_height">@dimen/button_h</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="b_empty_dialog" parent="base_empty_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="b_list_style" parent="base_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@drawable/sharp_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="settings_item_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_h</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@drawable/b_button_round</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_xl</item>
        <item name="android:paddingRight">@dimen/margin_l</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/loading</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="settings_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_h</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@drawable/b_button_round</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_xl</item>
        <item name="android:paddingRight">@dimen/margin_l</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>