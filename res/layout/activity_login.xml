<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_l" >

            <TextView
                android:id="@+id/activity_login_title"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登  录" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="1" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/activity_login_username_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名:" />

                    <EditText
                        android:id="@+id/activity_login_username_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/activity_login_password_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密    码:" />

                    <EditText
                        android:id="@+id/activity_login_password_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l" >

                <Button
                    android:id="@+id/activity_login_cancel_btn"
                    style="@style/b_button_style"
                    android:layout_marginLeft="10dp"
                    android:text="@android:string/cancel" />

                <Button
                    android:id="@+id/activity_login_login_btn"
                    style="@style/b_button_style"
                    android:layout_marginLeft="10dp"
                    android:onClick="onLoginClicked"
                    android:text="@android:string/ok" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>