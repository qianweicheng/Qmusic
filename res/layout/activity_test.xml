<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.qmusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:divider="@drawable/devider"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_h"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="@string/app_name"
        android:textSize="@dimen/font_size_small_x" />

    <Button
        android:id="@+id/activity_test1_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_head_button"
        android:text="Start Activity 1" />

    <Button
        android:id="@+id/activity_test1_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_middle_button"
        android:text="Start Activity 2" />

    <Button
        android:id="@+id/activity_test1_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_middle_button"
        android:text="Start Activity 3" />

    <Button
        android:id="@+id/activity_test1_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_footer_button"
        android:text="Start Activity 4" />

    <com.qmusic.controls.graphy.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        app:border_color="#ff0000"
        app:border_width="2dp" />

    <com.qmusic.controls.graphy.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        app:riv_border_color="#00ff00"
        app:riv_border_width="2dp"
        app:riv_oval="true" />

    <com.qmusic.controls.BPulldownView
        android:id="@+id/activity_test1_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pull down to get more"
            android:textColor="@android:color/black" >
        </TextView>
    </com.qmusic.controls.BPulldownView>

</LinearLayout>