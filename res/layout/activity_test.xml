<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.qmusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/devider"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    android:showDividers="middle|beginning|end" >

    <com.qmusic.controls.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_h" >
    </com.qmusic.controls.CommonTitle>

    <com.qmusic.test.EditText
        android:id="@+id/activity_test1_input_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.qmusic.controls.BEditView2
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_h"
        app:bText="@string/app_name"
        app:bTextHint="abcedft"
        app:bTextSize="@dimen/font_size_small_x" >
    </com.qmusic.controls.BEditView2>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_h"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="@string/app_name"
        android:textSize="@dimen/font_size_small_x" />

    <Button
        android:id="@+id/activity_test1_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_head_button"
        android:text="LockScreen" />

    <Button
        android:id="@+id/activity_test1_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_middle_button"
        android:text="Go Home" />

    <Button
        android:id="@+id/activity_test1_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_middle_button"
        android:text="Test" />

    <Button
        android:id="@+id/activity_test1_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_footer_button"
        android:text="Test" />

    <com.qmusic.controls.BPulldownView
        android:id="@+id/activity_test1_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pull down to get more"
            android:textColor="@android:color/black" >
        </TextView>
    </com.qmusic.controls.BPulldownView>

</LinearLayout>