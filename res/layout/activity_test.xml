<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.qmusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.qmusic.controls.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_h"
        app:common_title="Test1" >
    </com.qmusic.controls.CommonTitle>

    <EditText
        android:id="@+id/activity_test1_input_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_test1_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_head_button"
        android:text="Test1" />

    <Button
        android:id="@+id/activity_test1_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_middle_button"
        android:text="Test2" />
    <!--
    <Button
        android:id="@+id/activity_test1_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_middle_button"
        android:text="TestAlarm" />

    <Button
        android:id="@+id/activity_test1_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_footer_button"
        android:text="TestEvent" /
    -->
>

    <com.qmusic.controls.BPulldownView
        android:id="@+id/activity_test1_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is first row"
            android:textColor="@android:color/black" >
        </TextView>
    </com.qmusic.controls.BPulldownView>

</LinearLayout>